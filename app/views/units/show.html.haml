- provide(:title, unit_name(@unit))

- if policy(@concept).create?
  = modal "createCourse" do
    %h2 Create Concept
    = simple_form_for @concept do |f|
      = f.input :number
      = f.input :description
      = f.hidden_field :unit_id
      = f.button :submit

.row
  %h1= unit_name(@unit)

  - if policy(@concept).create?
    = modal_link "Create Course", "createCourse", class: "button"
